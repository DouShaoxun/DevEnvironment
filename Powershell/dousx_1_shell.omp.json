{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "foreground": "#31f8c3",
          "leading_diamond": "<#45F1C2>\u279c </>",
          "properties": {
            "display_host": true
          },
          "style": "diamond",
          "template": "<b>{{ .UserName }}</b> ",
          "type": "session"
        },
        {
          "foreground": "#0CA0D8",
          "properties": {
            "folder_separator_icon": "/",
            "style": "folder"
          },
          "style": "plain",
          "template": "\uf07b {{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "#bc93ff",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "style": "diamond",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
          "type": "git"
        },
        {
          "foreground": "#F6B65C",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " \ue601 {{ .FormattedMs }}s </>",
          "type": "executiontime"
        },
        {
          "foreground": "#02a937",
          "style": "diamond",
          "template": "î‰¦ {{ round .PhysicalPercentUsed .Precision }}%",
          "type": "sysinfo"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cd4265",
          "style": "plain",
          "template": "\ue3bf",
          "type": "root"
        },
        {
          "foreground": "#42c6cd",
          "style": "plain",
          "template": "\u26a1",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}